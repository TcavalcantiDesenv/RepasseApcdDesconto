    <div class="col-md-2">
        <h1 class="text-center"><small>Segunda</small></h1>
        <table class="table">
            <tr>
                <th class="text-center">
                    Horário
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model.Where(a => a.DiaDaSemana == "Segunda-Feira"))
            {
                <tr class="text-center">
                    <td>
                        @Html.DisplayFor(modelItem => item.HoraDeExecucao)
                        <a href="@Url.Action("Deletar", "Agendamentos", new { id= item.AgendamentoId })" class="btn-sm btn-danger">Remover</a>
