@using PagedList.Mvc;
@model PagedList.PagedList<Model.Entity.Agendamento>
@{
    ViewBag.Title = "Index";
}

@section styles{
    <link href="~/Content/bootstrap/bootstrap.min.css" rel="stylesheet" />
