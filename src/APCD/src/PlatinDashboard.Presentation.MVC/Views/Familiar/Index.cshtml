@model List<Model.Entity.Familiar>
@{
    ViewBag.Title = "Index";
}
@section styles{
    @Styles.Render("~/coreui/ladda/css")
    @Styles.Render("~/coreui/datatables/css")

}
@section breadcrumb{
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Home")">Painel Geral</a>
        </li>
        <li class="breadcrumb-item active">Familiares</li>
        <!-- Breadcrumb Menu-->
        <li class="breadcrumb-menu d-md-down-none">
            <div class="btn-group" role="group" aria-label="Button group">
                <a class="btn" href="javascript:void(0)">
                    Olá @User.Identity.Name !
                </a>
            </div>
        </li>
    </ol>
}
<div class="card">
    <div class="card-header">
        <h4 style="display: inline-block">Familiares Cadastrados -  @ViewBag.Macon</h4>
        <a href="@Url.Action("Novo", "Familiar")" class="btn btn-primary pull-right">
            <i class="fa icon-plus"></i> Cadastrar
        </a>
    </div>
    <div class="card-body">

        <table class="table table-striped table-bordered table-responsive-sm datatable dataTable no-footer" id="companiesTable">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th class="text-center">Grau</th>
                    <th>Sexo</th>
                    <th>Aniversário</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var familiar in Model)
                {
                    <tr id="company-row-@familiar.Id_Macon">

                        <td>
                            <div>@familiar.Nome</div>
                            @if (familiar.Aniversario > DateTime.Now.AddYears(-50))
                            {
                                <div class="small text-muted">
                                    Aniversário em: @familiar.Aniversario.ToString("dd/MM")
                                </div>
                            }
                        </td>
                        <td>@familiar.Email</td>
                        <td>@familiar.Grau</td>
                        <td>@familiar.Sexo</td>
                        <td>@familiar.Aniversario.ToString("dd/MM/yyyy")</td>
                        <td class="text-right">
                            @*<a class="btn btn-success" href="@Url.Action("Detalhe", "Macon", new { id = familiar.Id_Familiar })">
                                <i class="fa fa-search-plus "></i>
                            </a>
                            <a class="btn btn-success" href="@Url.Action("Update", "Familiar", new { id = familiar.Id_Familiar })">
                                <i class="fa fa-search-plus "></i>
                            </a>*@
                            <a class="btn btn-danger" href="@Url.Action("Delete", "Familiar", new { id = familiar.Id_Familiar })">
                                <i class="fa fa-trash-o "></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section modals{
    <div id="modal-section">

    </div>
}
@section scripts{
    @Scripts.Render("~/bundles/unobstrusive")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/coreui/ladda/js")
    @Scripts.Render("~/coreui/datatables/js")
    <script src="~/Scripts/viewsjs/index.js"></script>
    <script src="~/Scripts/viewsjs/companyindex.js"></script>
    <script src="~/Scripts/viewsjs/changeclient.js"></script>
    <script>
        $(document).ready(function () {
            loadClientes();
            initializeCompanyTable();
        });
    </script>

}





