@model Model.Entity.Familiar
@{
    ViewBag.Title = $"Usuário   | Portal APCD";
}
@section styles{
    @Styles.Render("~/coreui/ladda/css")
    @Styles.Render("~/coreui/select2/css")
    <style>
        .select2-selection {
            border: 1px solid #e4e7ea !important;
        }

        .locked-tag .select2-selection__choice__remove {
            display: none !important;
        }
    </style>
}
@section breadcrumb{
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Home")">Painel Geral</a>
        </li>
        <li class="breadcrumb-item active">Atualização do Familiar do Maçon  @ViewBag.Nome</li>
        <!-- Breadcrumb Menu-->
        <li class="breadcrumb-menu d-md-down-none">
            <div class="btn-group" role="group" aria-label="Button group">
                <a class="btn" href="javascript:void(0)">
                    Olá @User.Identity.Name !
                </a>
            </div>
        </li>
    </ol>
}

<div class="card">
    <div class="card-header">
        <h4 style="display: inline-block">Atualização do Familiar do Maçom  @ViewBag.Nome</h4>
        <a href="@Url.Action("Index", "Familiars")" class="btn btn-success pull-right">
            <i class="fa icon-plus"></i> Voltar
        </a>
    </div>
    <div class="card-body">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Familiar</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id_Familiar)

            <div class="row">
                <div class="form-group col-sm-12">
                    @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

                <div class="row">
                    <div class="form-group col-sm-6">
                        @Html.LabelFor(model => model.Aniversario, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Aniversario, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Aniversario, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                            @Html.LabelFor(model => model.Grau, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                @Html.DropDownListFor(model => model.Grau, new SelectList(ViewBag.Parente, "Value", "Text", 0), string.Empty, null)
                            </div>
                        </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-6">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        @Html.LabelFor(model => model.Sexo, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            <div class="col-md-6">
                                @Html.DropDownListFor(model => model.Sexo, new SelectList(ViewBag.Sexo, "Value", "Text", 0), string.Empty, null)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">


                </div>
            </div>
            <div class="form-actions col-md-offset-2">
                <input class="btn btn-danger" type="submit" name="btnsalvar" value="Salvar" />
            </div>
            }
        </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/unobstrusive")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/coreui/ladda/js")
    @Scripts.Render("~/coreui/select2/script")
    <script src="~/Scripts/viewsjs/user.js"></script>
    <script src="~/Scripts/viewsjs/details.js"></script>
    <script src="~/Scripts/viewsjs/userdetails.js"></script>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}
