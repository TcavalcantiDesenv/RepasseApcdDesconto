
@{
    ViewBag.Title = "Index";

}

@section styles{
    @Styles.Render("~/coreui/ladda/css")
    @Styles.Render("~/coreui/datatables/css")
}
@section breadcrumb{
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Home")">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Produtos</li>
        <!-- Breadcrumb Menu-->
        <li class="breadcrumb-menu d-md-down-none">
            <div class="btn-group" role="group" aria-label="Button group">
                <a class="btn" href="javascript:void(0)">
                    Olá @User.Identity.Name !
                </a>
            </div>
        </li>
    </ol>
}
<div class="card">
    <div class="card-header">
        <h4 style="display: inline-block">Editar Produtos Magento</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="form-group col-sm-6">
            </div>
            <div class="form-group col-sm-6">
            </div>
        </div>
        <div class="form-group">
        </div>
        <div class="form-group" id="StoreAccess">
            <label for="Email">Localização dos produtos ainda não definido.</label>
        </div>
        <div class="row">
            <div class="form-group col-sm-6">
            </div>
            <div class="form-group col-sm-4">
                <select id="UserType" name="UserType" class="form-control"></select>
            </div>
            <div class="col-sm-2">
                <div>
                    <label class="switch switch-label switch-pill switch-success">
                        <input type="checkbox" class="switch-input" name="Active" id="Active" checked="true" value="true">
                        <span class="switch-slider" data-checked="✓" data-unchecked="✕"></span>
                    </label>
                    <input name="Active" type="hidden" value="false">
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-success ladda-button" data-style="zoom-out" id="edit-btn" onclick="submitForm(this, 'edit-form')">
            <span class="ladda-label">Gravar</span>
        </button>
        <button type="submit" class="btn btn-primary ladda-button" data-style="zoom-out" id="edit-btn" onclick="submitForm(this, 'edit-form')">
            <span class="ladda-label">Cancelar</span>
        </button>
    </div>
</div>
@section modals{
    <div id="modal-section"></div>
}
@section scripts{
    @Scripts.Render("~/bundles/unobstrusive")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/coreui/ladda/js")
    @Scripts.Render("~/coreui/datatables/js")
    <script src="~/Scripts/viewsjs/index.js"></script>
    <script src="~/Scripts/viewsjs/userindex.js"></script>
    <script>
        $(document).ready(function () {
            initializeUserTable();
        });
    </script>
}


