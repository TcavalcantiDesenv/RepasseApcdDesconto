@model List<Model.Entity.Macon>
@{
    ViewBag.Title = "Index";
}
@section styles{
    @Styles.Render("~/coreui/ladda/css")
    @Styles.Render("~/coreui/datatables/css")

}
@section breadcrumb{
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Home")">Painel Geral</a>
        </li>
        <li class="breadcrumb-item active">Maçons</li>
        <!-- Breadcrumb Menu-->
        <li class="breadcrumb-menu d-md-down-none">
            <div class="btn-group" role="group" aria-label="Button group">
                <a class="btn" href="javascript:void(0)">
                    Olá @User.Identity.Name !
                </a>
            </div>
        </li>
    </ol>
}
<div class="card">
    <div class="card-header">
        <h4 style="display: inline-block">Maçons Cadastrados</h4>
        @*<a href="@Url.Action("Novo", "Macon")" class="btn btn-primary pull-right">
            <i class="fa icon-plus"></i> Cadastrar
        </a>*@
    </div>
    <div class="card-body">

        <table class="table table-striped table-bordered table-responsive-sm datatable dataTable no-footer" id="companiesTable">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Nº CIM</th>
                    <th class="text-center">Grau</th>
                    <th class="text-center">Situação</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var company in Model)
                {
                    <tr id="company-row-@company.Id_Macon">
                        <td>
                            <div>@company.Nome @company.Nome_Tratamento</div>
                            @if ( @company.Dt_Iniciado > DateTime.Now.AddYears(-50))
                            {
                                <div class="small text-muted">
                                    Iniciado em: @company.Dt_Iniciado.ToString("dd/MM/yyyy")
                                </div>
                            }
                        </td>
                        <td>@company.Cim</td>
                        <td class="text-center">
                            @if (@company.Id_Graduacao == 1)
                            {
                                <span class="badge badge-success">Aprendiz</span>
                            }
                            @if (company.Id_Graduacao == 2)
                            {
                                <span class="badge badge-warning">Companheiro</span>
                            }
                            @if (company.Id_Graduacao == 3)
                            {
                                <span class="badge badge-danger">Mestre</span>
                            }
                        </td>
                        <td class="text-center">
                            @if (@company.Situacao == "Em Loja")
                            {
                                <span class="badge badge-success">@company.Situacao</span>
                            }
                            else if (company.Situacao == "Adormecido")
                            {
                                <span class="badge badge-danger">@company.Situacao</span>
                            }
                            @*else
                                {
                                <span class="badge badge-dark">@company.Situacao</span>
                                }*@
                        </td>
                        <td>@company.Email</td>
                        <td class="text-right">
                            <a class="btn btn-success" href="@Url.Action("Detalhe", "Familiar", new { id = company.Id_Macon })">
                                <i class="fa fa-search-plus "></i>
                            </a>
                            <a class="btn btn-info" href="~/Macon/Update/@company.Id_Macon"><span class="fa fa-edit"></span></a>
                            <a class="btn btn-danger" href="~/Macon/Delete/@company.Id_Macon"><span class="fa fa-trash-o"></span></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section modals{
    <div id="modal-section">

    </div>
}
@section scripts{
    @Scripts.Render("~/bundles/unobstrusive")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/coreui/ladda/js")
    @Scripts.Render("~/coreui/datatables/js")
    <script src="~/Scripts/viewsjs/index.js"></script>
    <script src="~/Scripts/viewsjs/companyindex.js"></script>
    <script src="~/Scripts/viewsjs/changeclient.js"></script>
    <script>
        $(document).ready(function () {
            loadClientes();
            initializeCompanyTable();
        });
    </script>

}





