
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PortalLayout.cshtml";
}

<div class="banner">
    <div class="full-container">
        <div class="slider-content">
            <ul id="pager2" class="container"></ul>
            <span class="prevControl sliderControl"> <i class="fa fa-angle-left fa-3x "></i></span> <span class="nextControl sliderControl"> <i class="fa fa-angle-right fa-3x "></i></span>
            <div class="slider slider-v1" data-cycle-swipe=true data-cycle-prev=".prevControl" data-cycle-next=".nextControl" data-cycle-loader="wait">
                <div class="slider-item slider-item-img1">
                    <div class="sliderInfo">
                        <div class="container">
                            <div class="col-lg-12 col-md-12 col-sm-12 sliderTextFull ">
                                <div class="inner text-center">
                                    <div class="topAnima animated">
                                        <h1 class="uppercase xlarge">PORTAL ZEUS</h1>
                                        <h3 class="hidden-xs"> A maior e mais completa plataforma de gerenciamento Farmácias do mercado!</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <img src="@Url.Content("~/Images/Slider/slider-1.jpg")" class="img-responsive parallaximg sliderImg" alt="img" style=" filter: brightness(30%);">
                </div>
                <div class="slider-item slider-item-img2 ">
                    <div class="sliderInfo">
                        <div class="container">
                            <div class="col-lg-12 col-md-12 col-sm-12 sliderTextFull  ">
                                <div class="inner dark maxwidth500 text-center animated topAnima">
                                    <div>
                                        <h1 class="uppercase xlarge"> Traga sua Loja </h1>
                                        <h3 class="hidden-xs"> Faça parte dessa equipe</h3>
                                    </div>
                                    <a class="btn btn-danger btn-lg">
                                        ACESSE AGORA
                                        <span class="arrowUnicode">►</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <img src="@Url.Content("~/Images/Slider/slide8.jpg")" class="img-responsive parallaximg sliderImg" alt="img">
                </div>
                <div class="slider-item slider-item-img1">
                    <div class="sliderInfo">
                        <div class="container">
                            <div class="col-lg-12 col-md-12 col-sm-12 sliderTextFull ">
                                <div class="inner text-center">
                                    <div class="topAnima animated">
                                        <h1 class="uppercase xlarge">Centenas de Lojas Cadastradas</h1>
                                        <h3 class="hidden-xs"> Administre sua rede de lojas em apenas pouco cliques. </h3>
                                    </div>
                                    <a class="btn btn-danger btn-lg bottomAnima animated opacity0">
                                        Entenda como Funciona
                                        <span class="arrowUnicode">►</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <img src="@Url.Content("~/Images/Slider/slider-2.png")" class="img-responsive parallaximg sliderImg" alt="img" style=" filter: brightness(30%);">
                </div>
                <div class="slider-item slider-item-img3 ">
                    <div class="sliderInfo">
                        <div class="container">
                            <div class="col-lg-5 col-md-4 col-sm-6 col-xs-8   pull-left sliderText white hidden-xs">
                                <div class="inner">
                                    <h1>Tenha Sucesso!</h1>
                                    <h3 class="price ">Supere suas metas!</h3>
                                    <p class="hidden-xs">Veja em tempo real como estão suas vendas loja por loja.</p>
                                    <a href="category.html" class="btn btn-primary">
                                        Entre em contato
                                        <span class="arrowUnicode">►</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <img src="@Url.Content("~/Images/Slider/slider-31.png")" class="img-responsive parallaximg sliderImg" alt="img">
                </div>
            </div>
        </div>
    </div>
</div>
