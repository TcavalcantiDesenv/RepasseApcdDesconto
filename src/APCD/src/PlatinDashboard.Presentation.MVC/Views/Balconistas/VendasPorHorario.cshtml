@{
    ViewBag.Title = "Vendas por Horário | Portal APCD";
}
@section styles{
    @Styles.Render("~/coreui/ladda/css")
    @Styles.Render("~/coreui/datatables/css")
    <link href="~/coreuilib/spinkit/css/spinkit.css" rel="stylesheet" />
    <style>
        .col-md-7, .col-md-5, .col-md-4 {
            padding-left: 5px;
            padding-right: 5px;
        }
        .col-form-label {
            font-size: 17px;
        }
    </style>
}
@section breadcrumb{
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Home")">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Vendas por horário</li>
        <!-- Breadcrumb Menu-->
        <li class="breadcrumb-menu d-md-down-none">
            <div class="btn-group" role="group" aria-label="Button group">
                <a class="btn" href="javascript:void(0)">
                    Olá @User.Identity.Name !
                </a>
            </div>
        </li>
    </ol>
}
<div class="animated fadeIn">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-6">
                    <h4 class="card-title mb-0">Vendas Balconistas por horário</h4>
                </div>
                <div class="col-sm-12 d-md-block" style="text-align: right">
                    <button type="button" class="btn btn-primary float-right d-md-block ladda-button" id="vendas-hora-btn" onclick="carregarVendaBalconistaPorHora(this)">
                        <i class="icon-magnifier"></i> Buscar
                    </button>
                    <div class="form-group row col-md-3" style="display: inline-block">
                        <h1 class="col-md-4 col-form-label" for="select1" style="display: inline-block">Loja</h1>
                        <div class="col-md-7" style="display: inline-block">
                            @Html.DropDownList("loja-balconista", (IEnumerable<SelectListItem>)ViewBag.Stores, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row col-md-3" style="display: inline-block">
                        <h1 class="col-md-4 col-form-label" for="select1" style="display: inline-block">Mês</h1>
                        <div class="col-md-7" style="display: inline-block">
                            @Html.DropDownList("mes-balconista", (IEnumerable<SelectListItem>)ViewBag.Months, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row col-md-3" style="display: inline-block">
                        <h1 class="col-md-4 col-form-label" for="select1" style="display: inline-block">Ano</h1>
                        <div class="col-md-7" style="display: inline-block">
                            @Html.DropDownList("ano-balconista", (IEnumerable<SelectListItem>)ViewBag.Years, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row col-md-3" style="display: inline-block">
                        <h1 class="col-md-4 col-form-label" for="select1" style="display: inline-block">Top</h1>
                        <div class="col-md-7" style="display: inline-block">
                            <select id="top-balconista" class="form-control">
                                <option value="5">5</option>
                                <option value="10" selected>10</option>
                                <option value="15">15</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <!--/.row-->
            <div class="chart-wrapper" style="margin-top:40px;">
                <span id="loading-vendasBalconistaPorHora"></span>
            </div>
        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/coreui/ladda/js")
    <script src="~/Scripts/viewsjs/index.js"></script>
    <script src="~/Scripts/chartsjs/balconistashora.v1.0.1.js"></script>
    <script src="~/coreuilib/chart.js/js/Chart.min.js"></script>
    <script src="~/Scripts/viewsjs/changeclient.js"></script>
    <script>
        $(document).ready(function () {
            loadClientes();
            carregarGraficoVendasBalconistaPorHora('vendasBalconistaPorHora', 'chartVendasBalconistaPorHora');
        });
    </script>
}