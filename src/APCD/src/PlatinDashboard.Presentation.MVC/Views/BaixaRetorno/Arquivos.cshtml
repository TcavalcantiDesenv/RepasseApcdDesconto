
@{
    ViewBag.Title = "Index";

}

@section styles{
    @Styles.Render("~/coreui/ladda/css")
    @Styles.Render("~/coreui/datatables/css")
}
@section breadcrumb{
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Home")">APCD Remessas</a>
        </li>
        <li class="breadcrumb-item active">Arquivos de Baixas</li>
        <!-- Breadcrumb Menu-->
        <li class="breadcrumb-menu d-md-down-none">
            <div class="btn-group" role="group" aria-label="Button group">
                <a class="btn" href="javascript:void(0)">
                    Olá @User.Identity.Name !
                </a>
            </div>
        </li>
    </ol>
}
<link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
<div class="card">
    <div class="card-header">
        <h4 style="display: inline-block">Arquivos de Baixas</h4>
    </div>
    <div class="card-body">
        <table class="table table-responsive-sm table-hover table-outline mb-0" id="usersTable">
            <thead class="thead-light">
                <tr>
                    <th class="text-center">
                        <i class="icon-people"></i>
                    </th>
                    <th>Nome do Arquivo</th>
                    @*<th class="text-center">Descrição</th>*@
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in @ViewBag.Arquivos)
                {
                    <tr id="user-row- @ViewBag.Arquivos">
                        <td class="text-center">
                            <div class="avatar">
                                <div class="user-initial">
                                    @*<span class="avatar-status badge-success">user</span>*@
                                    <span>A</span>
                                </div>
                                @*@if (true)
                                {
                                    <span class="avatar-status badge-success">user</span>
                                }
                                else
                                {
                                    <span class="avatar-status badge-danger"></span>
                                }*@
                            </div>
                        </td>
                        <td>
                            <div> @user</div>
                            <div class="small text-muted">
                                Cadastro em: 06/04/2018
                            </div>
                        </td>
                        @*<td class="text-center">
                            @user
                        </td>*@

                        <td class="text-right">
                            <a class="btn btn-success" href="@Url.Action("DownloadFile", "BaixaRetorno", new { arquivo =  @user })">
                                <i class="fa fa-download "></i>
                            </a>
                            @*<a class="btn btn-danger" href="@Url.Action("DeleteFile", "BaixaRetorno", new { arquivo =  @user })">
                                <i class="fa fa-trash-o "></i>
                            </a>*@
                            @*<a class="btn btn-danger ladda-button" data-style="zoom-out" href="javascript:void(0)" onclick="showDeleteModal(this, ' @ViewBag.TesteCliente')">
            <i class="fa fa-trash-o "></i>
        </a>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section modals{
    <div id="modal-section"></div>
}
@section scripts{
    @Scripts.Render("~/bundles/unobstrusive")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/coreui/ladda/js")
    @Scripts.Render("~/coreui/datatables/js")
    <script src="~/Scripts/viewsjs/index.js"></script>
    <script src="~/Scripts/viewsjs/userindex.js"></script>
    <script>
        $(document).ready(function () {
            initializeUserTable();
        });
    </script>
}

