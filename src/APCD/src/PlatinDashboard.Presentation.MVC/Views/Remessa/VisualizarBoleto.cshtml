@section styles{
    @Styles.Render("~/coreui/ladda/css")
    @Styles.Render("~/coreui/datatables/css")
}
@{Layout = null;}@Html.Raw(ViewBag.Boleto)

<div class="card-header">
    <h4 style="display: inline-block">Composição do Boleto</h4>
</div>
<div class="card">
    <div class="card-body">
        <table class="table table-striped table-bordered table-responsive-sm datatable dataTable no-footer" id="companiesTable">
            <thead>
                <tr>
                    <th>Matricula</th>
                    <th>Nome</th>
                    <th>Valor</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < ViewBag.RegionaisPagas.Count; i++)
                {
                    <tr>
                        <td>@ViewBag.RegionaisPagas[i].Matricula</td>
                        <td>@ViewBag.RegionaisPagas[i].Nome</td>
                        <td class="text-right">@String.Format("{0:C}", @ViewBag.RegionaisPagas[i].Valor)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/unobstrusive")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/coreui/ladda/js")
    @Scripts.Render("~/coreui/datatables/js")
    <script src="~/Scripts/viewsjs/index.js"></script>
    <script src="~/Scripts/viewsjs/companyindex.js"></script>
    <script src="~/Scripts/viewsjs/changeclient.js"></script>
    <script>
        $(document).ready(function () {
            loadClientes();
            initializeCompanyTable();
        });
    </script>

}


