@model Model.Entity.RemessaModel
@{
    ViewBag.Title = "Index";
}
@section styles{
    @Styles.Render("~/coreui/ladda/css")
    @Styles.Render("~/coreui/datatables/css")
}
@section breadcrumb{
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Home")">Painel Geral</a>
        </li>
        <li class="breadcrumb-item active">Remessas</li>
        <li class="breadcrumb-menu d-md-down-none">
            <div class="btn-group" role="group" aria-label="Button group">
                <a class="btn" href="javascript:void(0)">
                    Olá @User.Identity.Name !
                </a>
            </div>
        </li>
    </ol>
}
<div class="card">
    <div class="row">
    </div>
    @using (Html.BeginForm())
    {
        <div class="card-header">
            <h4 style="display: inline-block">@ViewBag.NomeRegional.ToString()</h4>
            <div class="form-group row col-md-3 float-right" style="display: inline-block">
                <a class="btn btn-primary float-right d-md-block ladda-button">
                    <input type="submit" value="Gravar" />
                </a>
                <a class="btn btn-success" href="@Url.Action("Index", "Remessa")">
                    <i class="fa fa-search-plus ">Voltar</i>
                </a>
            </div>


            <div class="form-group row col-md-6 float-right" style="display: none">
                <label for="exampleInputEmail1">Data</label>
                <div class="col-md-5" style="display: inline-block">
                    @*@Html.TextBoxFor(model => model.ListaRemessa[0].Nome, new { @type = "text", @class = "form-control" })*@
                </div>
            </div>
        </div>

        <div class="card-body">
            <table class="table table-striped table-bordered table-responsive-sm datatable dataTable no-footer" id="companiesTable">
                <thead>
                    <tr>
                        <th>Cod. Regional</th>
                        <th>Regional</th>
                        <th>LCM</th>
                        <th>Matricula</th>
                        <th>Nome</th>
                        <th>Categoria</th>
                        <th>Vencimento</th>
                        <th>Valor</th>
                        <th>Pago</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.ListaRemessa.Count; i++)
                    {
                        <tr>
                            @Html.HiddenFor(model => model.ListaRemessa[i].indice)
                            @Html.HiddenFor(model => model.ListaRemessa[i].Matricula)
                            <td>@Model.ListaRemessa[i].CodRegional</td>
                            <td>@Model.ListaRemessa[i].NomeRegional</td>
                            <td>@Model.ListaRemessa[i].LCM</td>
                            <td>@Model.ListaRemessa[i].Matricula</td>
                            <td>@Model.ListaRemessa[i].Nome</td>
                            <td>@Model.ListaRemessa[i].Categoria</td>
                            <td>@Model.ListaRemessa[i].Vencimento</td>
                            <td>@Model.ListaRemessa[i].Valor</td>
                            <td>@Html.CheckBoxFor(model => model.ListaRemessa[i].Pago)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
@section modals{
    <div id="modal-section">

    </div>
}
@section scripts{
    @Scripts.Render("~/bundles/unobstrusive")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/coreui/ladda/js")
    @Scripts.Render("~/coreui/datatables/js")
    <script src="~/Scripts/viewsjs/index.js"></script>
    <script src="~/Scripts/viewsjs/companyindex.js"></script>
    <script src="~/Scripts/viewsjs/changeclient.js"></script>
    <script>
        $(document).ready(function () {
            loadClientes();
            initializeCompanyTable();
        });
    </script>

}
