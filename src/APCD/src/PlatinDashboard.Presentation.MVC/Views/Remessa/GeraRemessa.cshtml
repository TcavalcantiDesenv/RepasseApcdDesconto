@{
    ViewBag.Title = "APCD - Boleto";
}
<h2>@ViewBag.Message</h2>
<p>
    Escolher o banco e visuakizar o boleto de exemplo.
</p>
<p>
    Escolha um banco:@Html.DropDownList("bancos")
    <button id="btnVisualizar">Visualizar</button>
    <button id="btnGerarPDF">GerarPDF</button>
</p>
<script type="text/javascript">
$(document).ready(function () {

        $("#btnVisualizar").click(function () {
            var url = "/Boleto/VisualizarBoleto/" + $("#bancos").val();
            abrirPopup(url);
        });

        $("#btnGerarPDF").click(function () {
            var url = "/Boleto/GerarBoletoPDF/" + $("#bancos").val();
            abrirPopup(url);
        });

        function abrirPopup(url) {
            window.open(url, "WindowPopup", 'width=700,height=800');
        }
    });</script>


