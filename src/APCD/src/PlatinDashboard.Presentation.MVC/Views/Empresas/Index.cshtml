@model IEnumerable<PlatinDashboard.Application.ViewModels.CompanyViewModels.CompanyViewModel>
@{
    ViewBag.Title = "Empresas | Portal APCD";
}
@section styles{
    @Styles.Render("~/coreui/ladda/css")
    @Styles.Render("~/coreui/datatables/css")
}
@section breadcrumb{
    <!-- Breadcrumb-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index", "Home")">Painel Geral</a>
    </li>
    <li class="breadcrumb-item active">Regionais</li>
    <!-- Breadcrumb Menu-->
    <li class="breadcrumb-menu d-md-down-none">
        <div class="btn-group" role="group" aria-label="Button group">
            <a class="btn" href="javascript:void(0)">
                Olá @User.Identity.Name !
            </a>
        </div>
    </li>
</ol>
}
<div class="card">
    <div class="card-header">
        <h4 style="display: inline-block">Regionais Cadastradas</h4>
        <a href="@Url.Action("Nova", "Empresas")" class="btn btn-primary pull-right">
            <i class="fa icon-plus"></i> Criar
        </a>
    </div>
    <div class="card-body">

        <table class="table table-striped table-bordered table-responsive-sm datatable dataTable no-footer" id="companiesTable">
            <thead>
                <tr>
                    <th>Nome da Regional</th>
                    <th>Tipo</th>
                    <th class="text-center">Status</th>
                    <th>Data de Cadastro</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var company in Model)
                {
                    <tr id="company-row-@company.CompanyId">
                        <td>@company.Name</td>
                        <td>@company.CompanyType</td>
                        <td class="text-center"><span class="badge badge-success">Ativo</span></td>
                        <td>
                            @company.CreatedAt.ToString("dd/MM/yyy")
                        </td>
                        <td class="text-right">
                            <a class="btn btn-success" href="@Url.Action("Detalhes", "Empresas", new { id = company.CompanyId })">
                                <i class="fa fa-search-plus "></i>
                            </a>
                            <a class="btn btn-danger ladda-button" data-style="zoom-out" href="javascript:void(0)" onclick="showDeleteModal(this, @company.CompanyId)">
                                <i class="fa fa-trash-o "></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section modals{
    <div id="modal-section">

    </div>
}
@section scripts{
    @Scripts.Render("~/bundles/unobstrusive")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/coreui/ladda/js")
    @Scripts.Render("~/coreui/datatables/js")
    <script src="~/Scripts/viewsjs/index.js"></script>
    <script src="~/Scripts/viewsjs/companyindex.js"></script>
    <script src="~/Scripts/viewsjs/changeclient.js"></script>
    <script>
        $(document).ready(function () {
            loadClientes();
            initializeCompanyTable();
        });
    </script>

}

