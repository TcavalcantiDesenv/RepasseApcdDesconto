@model Model.Entity.RegionaisModel
@{
    ViewBag.Title = "Index";
}
@section styles{
    @Styles.Render("~/coreui/ladda/css")
    @Styles.Render("~/coreui/datatables/css")
}
@section breadcrumb{
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Home")">Painel Geral</a>
        </li>
        <li class="breadcrumb-item active">Remessas</li>
        <!-- Breadcrumb Menu-->
        <li class="breadcrumb-menu d-md-down-none">
            <div class="btn-group" role="group" aria-label="Button group">
                <a class="btn" href="javascript:void(0)">
                    Olá @User.Identity.Name !
                </a>
            </div>
        </li>
    </ol>
}
<link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <div class="card">
        @using (Html.BeginForm())
        {
            <div class="card-header">
                <h4 style="display: inline-block">
                    @Session["NOMREG"].ToString()
            </h4>

        </div>
        @*<table>
            <tr>
                <td> Escolha o mes de Referencia: </td>
                <td>
                    @Html.DropDownList("MesAno", (IEnumerable
                   <SelectListItem>)ViewBag.MesAno)
                </td>
            </tr>
        </table>*@
        <div class="card-body">
            <table class="table table-striped table-bordered table-responsive-sm datatable dataTable no-footer" id="companiesTable">
                <thead>
                    <tr>
                        <th>Cod. Regional</th>
                        <th>Regional</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.ListaRegionais.Count; i++)
                    {
                        <tr>
                            <td>@Model.ListaRegionais[i].CodRegional</td>
                            <td>@Model.ListaRegionais[i].NomeRegional</td>
                            <td class="text-right">
                                <a data-toggle="tooltip" title="Clique para obter a lista de associados" class="btn btn-success" href="@Url.Action("Index", "Remessa", new { id = @Model.ListaRegionais[i].CodRegional })">
                                    <i class="fa fa-search-plus "></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        }
    </div>

@section modals{
    <div id="modal-section">

    </div>
}
@section scripts{
    @Scripts.Render("~/bundles/unobstrusive")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/coreui/ladda/js")
    @Scripts.Render("~/coreui/datatables/js")
    <script src="~/Scripts/viewsjs/index.js"></script>
    <script src="~/Scripts/viewsjs/companyindex.js"></script>
    <script src="~/Scripts/viewsjs/changeclient.js"></script>
    <script>
        $(document).ready(function () {
            loadClientes();
            initializeCompanyTable();
        });
    </script>

}



